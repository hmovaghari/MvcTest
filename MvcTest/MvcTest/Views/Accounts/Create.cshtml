@model MyAccounting.ViewModels.CreateAccount

@{
    ViewData["Title"] = "ایجاد حساب";
}

<h1>ایجاد حساب جدید</h1>

<h4>حساب</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyUnitID" class="control-label"></label>
                <select asp-for="CurrencyUnitID" class="form-control select2" asp-items="ViewBag.CurrencyUnitID"></select>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountNumber" class="control-label"></label>
                <input asp-for="BankAccountNumber" class="form-control" />
                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankCard" class="control-label"></label>
                <input asp-for="BankCard" class="form-control" />
                <span asp-validation-for="BankCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankShaba" class="control-label"></label>
                <input asp-for="BankShaba" class="form-control" />
                <span asp-validation-for="BankShaba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
