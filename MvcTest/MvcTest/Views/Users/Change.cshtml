@model MyAccounting.ViewModels.ChangeUser

@{
    ViewData["Title"] = "تغییر وضعیت کاربر";
}

<h1>تغییر وضعیت کاربر</h1>

<h4>کاربر</h4>
<div><span>@ViewBag.Username</span></div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Change">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />

            <div class="form-group form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive">
                    @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsAdmin" />
                <label class="form-check-label" asp-for="IsAdmin">
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">انصراف</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}